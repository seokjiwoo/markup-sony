<script language="javascript" type="text/javascript">
var tabcon = e('tab_menu').getElementsByTagName("li")
var tabcontent
var totWidth = 0;
var conLeft =0;
for(i=0;i< tabcon.length;i++){
	totWidth += tabcon[i].offsetWidth	
}

//텝버튼 추가 스크립트 
var conWidth = e('tab_menu').offsetWidth
if(totWidth > conWidth){
	e('tab_btn').style.display = "block"
}
var tabcount = 0;

//텝버튼 왼쪽이동
function tabLeft(){
	if(tabcount > tabcon.length-2)return;
	conLeft += tabcon[tabcount].offsetWidth
	e('tabgroup').style.left ="-" + conLeft + "px"
	tabcount++	 	
}
//텝버튼 오른쪽이동
function tabRight(){
	if(tabcount ==0)return;
	tabcount--
	conLeft -= tabcon[tabcount].offsetWidth
	e('tabgroup').style.left ="-" + conLeft + "px"	  	
}
//텝버튼 선택
function tabselect($num){
	for(i=0;i<tabcon.length;i++){
		tabcon[i].className ="off product"
		tabcontent = "tabcontent_" + i
		e(tabcontent).style.display = "none"  
	}
	tabcontent = "tabcontent_" + $num	
	e(tabcontent).style.display = "block"	
	tabcon[$num].className ="on product"
}
//초기실행
tabselect(0)
</script>

